datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

// Models
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  stock       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
